<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.everis.bootcamp.threading">

    <!--TODO0: 001 Incluir a permissão de internet -->

    <uses-permission android:name="android.permission.INTERNET"/>

    <!-- TODàO: 019 Incluir a propriedade android:usesCleartextTraffic="true" para requisição
    acontece que o http nao eh criptografado, ele nao eh mt aceito, como nossa requisicao eh em
    http e nao criptografado como https precisamos explicitar isso logo abaixo
    -->



    <application
            android:usesCleartextTraffic="true"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>